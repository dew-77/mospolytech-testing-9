{
  "info": {
    "name": "JSONPlaceholder API Sample",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET User 2",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/users/2",
          "protocol": "https",
          "host": ["jsonplaceholder", "typicode", "com"],
          "path": ["users", "2"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"status 200\", () => pm.response.to.have.status(200));",
              "const json = pm.response.json();",
              "pm.test(\"has id 2\", () => pm.expect(json.id).to.eql(2));",
              "pm.test(\"email present\", () => pm.expect(json.email).to.include(\"@\"));"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "POST Create Post",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"foo\",\n  \"body\": \"bar\",\n  \"userId\": 1\n}"
        },
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/posts",
          "protocol": "https",
          "host": ["jsonplaceholder", "typicode", "com"],
          "path": ["posts"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"status 201\", () => pm.response.to.have.status(201));",
              "const body = pm.response.json();",
              "pm.test(\"has id\", () => pm.expect(body.id).to.not.be.undefined);",
              "pm.test(\"title ok\", () => pm.expect(body.title).to.eql(\"foo\"));"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "PUT Update Post",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": 1,\n  \"title\": \"baz\",\n  \"body\": \"updated\",\n  \"userId\": 1\n}"
        },
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/posts/1",
          "protocol": "https",
          "host": ["jsonplaceholder", "typicode", "com"],
          "path": ["posts", "1"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"status 200\", () => pm.response.to.have.status(200));",
              "const body = pm.response.json();",
              "pm.test(\"title updated\", () => pm.expect(body.title).to.eql(\"baz\"));"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
